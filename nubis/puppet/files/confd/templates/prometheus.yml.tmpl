# Generated by confd

global:
  scrape_interval:     15s # By default, scrape targets every 15 seconds.
  evaluation_interval: 15s # By default, scrape targets every 15 seconds.

  # Attach these labels to any time series or alerts when communicating with
  # external systems (federation, remote storage, Alertmanager).
  external_labels:
    monitor: 'prometheus'
{{if exists "/config/AccountName"}}
    account: '{{ getv "/config/AccountName" }}'
{{end}}
{{if exists "/config/AccountID"}}
    account_id: '{{ getv "/config/AccountID" }}'
{{end}}
{{if exists "/config/TechnicalContact"}}
    technical_contact: '{{ getv "/config/TechnicalContact" }}'
{{end}}
{{if exists "/config/EnvironmentName"}}
    environment: '{{ getv "/config/EnvironmentName" }}'
{{end}}
{{if exists "/config/RegionName"}}
    region: '{{ getv "/config/RegionName" }}'
{{end}}
{{if exists "/config/LiveApp"}}
    live_app: '{{ getv "/config/LiveApp" }}'
{{end}}


rule_files:
  - "/etc/prometheus/rules.prom"
  - "/etc/prometheus/nubis.rules.d/*.prom"
  - "/etc/prometheus/rules.d/*.prom"

scrape_configs:
  - job_name: 'prometheus'
    metrics_path: '/prometheus/metrics'
    static_configs:
      - targets: ['localhost:81']

  - job_name: 'cloudwatch'
    scrape_interval: 1m
    static_configs:
      - targets: ['localhost:9116']
{{if exists "/config/EnvironmentName"}}
{{if eq "admin" (getv "/config/EnvironmentName") }}
  - job_name: 'cloudwatch-billing'
    scrape_interval: 5m
    static_configs:
      - targets: ['localhost:9117']
{{end}}{{end}}
  - job_name: 'alertmanager'
    metrics_path: '/alertmanager/metrics'
    relabel_configs:
    - source_labels: ['__meta_consul_address']
      regex:         '(.*)'
      target_label:  '__address__'
      replacement:   '$1:9093'
    - source_labels: ['__meta_consul_node']
      regex:         '(.*)'
      target_label:  'instance'
      replacement:   '$1'

    consul_sd_configs:
    - server: 'localhost:8500'
      services:
        - alertmanager

  - job_name: 'consul'
    relabel_configs:
    - source_labels: ['__meta_consul_address']
      regex:         '(.*)'
      target_label:  '__address__'
      replacement:   '$1:9107'
